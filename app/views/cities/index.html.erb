<p align="center" id="notice"><%= notice %></p>
<h1>Listing Cities</h1>
<p align="right">
  <%= link_to 'New City', new_city_path, class: "btn btn-success btn-sm"%>
</p>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>City name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city_path(city), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
