<div class="container">
  <ol class="breadcrumb">
    <li><%= link_to "Home Work", root_path %></li>
    <li class="active">Cities</li>
    <p class="pull-right text-white"><%= link_to "New City",new_city_path, class: "btn btn-success btn-xs" %></p>
  </ol>
  <%= render 'layouts/notice' %>

  <div class="table-responsive">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>City name</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% sr = 0 %>
        <% @cities.each_with_index do |city, index| %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= city.name %></td>
            <td><%= link_to 'Edit', edit_city_path(city) %></td>
            <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
