<p id="notice"><%= notice %></p>
<h1>Listing Bookings</h1>
<p align="right">
  <%= link_to 'New Booking', new_booking_path, class: "btn btn-success btn-sm"%>
</p>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Customer name</th>
      <th>Cleaner name</th>
      <th>Start</th>
      <th>End</th>
      <th>City</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.customer.first_name %>&nbsp<%= booking.customer.last_name %></td>
        <td><%= booking.cleaner.first_name %>&nbsp<%= booking.cleaner.last_name %></td>
        <td><%= booking.cleaning_start %></td>
        <td><%= booking.cleaning_start + 2.hours %></td>
        <td><%= City.find(booking.customer_city_id).name %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
