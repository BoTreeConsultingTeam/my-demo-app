<div class="form-horizontal">
  <div class="text-center">
    <%= form_for(@booking) do |f| %>
      <% if @booking.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

          <ul>
          <% @booking.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :customer_id, class: "col-sm-offset-2 col-sm-2 control-label" %>
        <div class="col-sm-5">
          <%= f.text_field :customer_id, class: "form-control", placeholder: "First Name" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :customer_id %><br>
        <%= f.text_field :customer_id %>
      </div>
      <div class="field">
        <%= f.label :cleaner_id %><br>
        <%= f.text_field :cleaner_id %>
      </div>
      <div class="field">
        <%= f.label :date %><br>
        <%= f.date_select :date %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
