<%= form_for(@customer) do |f| %>
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
    <%= @customer.errors.full_messages_for(:name)[0] %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
    <%= @customer.errors.full_messages_for(:name)[0] %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %>
    <%= @customer.errors.full_messages_for(:name)[0] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
