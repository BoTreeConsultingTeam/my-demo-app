<div class="form-horizontal">
  <div class="text-center">
  <%= form_for(@customer) do |f| %>
    <% if @customer.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

        <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :first_name, class: "col-sm-offset-2 col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: "col-sm-offset-2 col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :phone_number, class: "col-sm-offset-2 col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :phone_number, class: "form-control", placeholder: "Phone number" %>
      </div>
    </div>

    <div>
      <h3>Schedule you booking</h3>
    </div>

    <div class="form-group">
      <%= f.label :select_city, class: "col-sm-offset-2 col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= collection_select(:customer, :city_id, City.Active, :id, :name, { prompt: "Select your City"}, class: "form-control") %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :select_date, class: "col-sm-offset-2 col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.date_field :date, class: "form-control", placeholder: "Select Date of Job" %>
      </div>
    </div>

    <div>
      <%= f.submit "Send Request", class: "btn btn-primary" %>
    </div>
  <% end %>
  </div>
</div>
