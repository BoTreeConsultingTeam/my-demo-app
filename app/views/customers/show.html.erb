<p align="center" id="notice"><%= notice %></p>

  <h3>Profile</h3> <br><br>
  <p>
    <strong>First name:</strong>
    <%= @customer.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @customer.last_name %>
  </p>

  <p>
    <strong>Phone number:</strong>
    <%= @customer.phone_number %>
  </p>

  <%= link_to 'Edit', edit_customer_path(@customer), class: "btn btn-default btn-sm" %>

  <h3>My Bookings</h3>

<table class="table" >
  <thead class="thead-default">
    <tr>
      <th>Cleaner name</th>
      <th>Cleaner Email</th>
      <th>Start</th>
      <th>Finish</th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= Cleaner.find(booking.cleaner_id).first_name %></td>
        <td><%= Cleaner.find(booking.cleaner_id).email %></td>
        <td><%= booking.cleaning_start %></td>
        <td><%= booking.cleaning_start + 2.hours %></td>
      </tr>
    <% end %>
  </tbody>

</table>
