<div class="container-fluid">
  <div class="raw">
    <h5> <strong class="text-muted col-md-4">First name: </strong><%= @customer.first_name %></h5>
  </div>
  <div class="raw">
    <h5> <strong class="text-muted col-md-4">Last name: </strong><%= @customer.last_name %></h5>
  </div>
  <div class="raw">
    <h5> <strong class="text-muted col-md-4">Phone_number: </strong><%= @customer.phone_number %></h5>
  </div>
  <div class="raw">
    <%= link_to 'Edit', edit_customer_path(@customer),:class => 'btn btn-sm btn-success text-white' %> |
    <%= link_to 'Back', customers_path,:class => 'btn btn-sm btn-success text-white'   %>
  </div>
</div>
