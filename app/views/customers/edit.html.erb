<div class="container">
  <ol class="breadcrumb">
    <li><%= link_to "Home Work", root_path %></li>
    <li><%= link_to 'Customers', customers_path %></li>
    <li class="active"><%= "#{@customer.first_name} #{@customer.last_name}" %></li>
  </ol>

  <div class="form-horizontal">
    <div class="text-center">
    <%= form_for(@customer) do |f| %>
      <% if @customer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

          <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :first_name, class: "col-sm-offset-2 col-sm-2 control-label" %>
        <div class="col-sm-5">
          <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :last_name, class: "col-sm-offset-2 col-sm-2 control-label" %>
        <div class="col-sm-5">
          <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :phone_number, class: "col-sm-offset-2 col-sm-2 control-label" %>
        <div class="col-sm-5">
          <%= f.text_field :phone_number, class: "form-control", placeholder: "Phone number" %>
        </div>
      </div>



      <div>
        <%= f.submit "Save", class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
