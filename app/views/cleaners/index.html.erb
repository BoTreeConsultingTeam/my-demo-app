<div class="container">
  <ol class="breadcrumb">
    <li><%= link_to "Home Work", root_path %></li>
    <li class="active">Cleaners</li>
    <p class="pull-right text-white"><%= link_to "New Cleaner",new_cleaner_path, class: "btn btn-success btn-xs" %></p>
  </ol>
  <% if notice.present?  %>
    <div class="alert alert-success" role="alert" id="notice"><%= notice %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <div class="table-responsive">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Confirmation</th>
          <th>Quality score</th>
          <th>Verified</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @cleaners.each_with_index do |cleaner, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= cleaner.first_name %></td>
            <td><%= cleaner.last_name %></td>
            <td><%= cleaner.quality_score %></td>
            <td><%= cleaner.email %></td>
            <td>
              <span class="label label-<%= verification_state_btn(cleaner.email_confirmed) %>">
                <%= verification_state_msg(cleaner.email_confirmed) %>
              </span>
            </td>
            <td><%= link_to 'Show', cleaner %></td>
            <td><%= link_to 'Edit', edit_cleaner_path(cleaner) %></td>
            <td><%= link_to 'Destroy', cleaner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <p>
      <strong>Note: </strong>
      No any work is assigned to cleaner, until he/she verifies email.
    </p>
  </div>
</div>
