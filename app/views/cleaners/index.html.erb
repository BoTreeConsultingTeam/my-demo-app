<p id="notice"><%= notice %></p>

<h1>Listing Cleaners</h1>
<div class="table_width">
  <div class="float-right">
  <%= button_to  new_cleaner_path,method: :get,class: "btn btn-primary",title: 'Add New Cleaner' do %>
  <span class="glyphicon glyphicon-plus"></span>
  <% end %></div>
<table border=2 class="table table-bordered">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Quality score</th>
      <th>Cities</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @cleaners.each do |cleaner| %>
      <tr>
        <td><%= cleaner.first_name %></td>
        <td><%= cleaner.last_name %></td>
        <td><%= cleaner.email %></td>
        <td><%= cleaner.quality_score %></td>
        <td><%= cleaner.cities.pluck(:name).join(',')%>
        </td>
        <td><%= link_to  cleaner  do%>
              <span class="glyphicon glyphicon-eye-open"></span>
            <% end %>
        </td>
        <td><%= link_to edit_cleaner_path(cleaner) do %>
            <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
        </td>
        <td><%= link_to  cleaner, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
