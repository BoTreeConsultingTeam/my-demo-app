<div class= "text-center">
<h2>Log In</h2>
<div class= "form-horizontal">
<%= form_for(resource,  :html =>{class:'form-horizontal text-center '}, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="form-group">
  <%= f.label :email , class: 'col-sm-offset-2 col-sm-2 control-label',  autocomplete: "off" %>
  <div class="col-sm-5">
    <%= f.text_field :email , class: "form-control"%>
  </div>
</div>

<div class="form-group">
  <%= f.label :password , class: 'col-sm-offset-2 col-sm-2 control-label',  autocomplete: "off" %>
  <div class="col-sm-5">
    <%= f.text_field :password , class: "form-control"%>
  </div>
</div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="col-sm-offset-2 actions text-center col-sm-5">
      <%= f.submit "Login",:class => "btn btn-primary" %>
    </div>
<% end %>

</div>
</div>
<%= render "admin/shared/links" %>
